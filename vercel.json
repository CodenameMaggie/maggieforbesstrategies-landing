{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/mf-landing-page.html" },
    { "source": "/login", "destination": "/login.html" },
    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/client-portal", "destination": "/client-portal.html" }
  ],
  "headers": [
    {
      "source": "/(.*).html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,PATCH,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With, X-Cron-Secret, X-Tenant-ID" },
        { "key": "Access-Control-Expose-Headers", "value": "Content-Range, X-Content-Range" }
      ]
    }
  ],
  "functions": {
    "api/automation-scheduler": {
      "maxDuration": 60
    },
    "api/web-prospector": {
      "maxDuration": 60
    },
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/automation-scheduler",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/consultation-reminders",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/social-post-publisher",
      "schedule": "*/15 * * * *"
    }
  ]
}
