{
  "version": 2,
  "crons": [
    {
      "path": "/api/follow-up-processor",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/consultation-reminders",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/social-post-publisher",
      "schedule": "*/15 * * * *"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
}
