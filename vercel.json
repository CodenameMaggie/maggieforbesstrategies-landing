{
  "version": 2,
  "outputDirectory": "public",
  "rewrites": [
    { "source": "/", "destination": "/mf-landing-page.html" },
    { "source": "/login", "destination": "/login.html" },
    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/ai-chat", "destination": "/ai-chat-widget.html" },
    { "source": "/ai-assistants", "destination": "/ai-chat-widget.html" }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/automation-scheduler",
      "schedule": "0 9 * * *"
    }
  ]
}
